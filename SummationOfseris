#include <iostream>
#include <cmath>
using namespace std;

int main()
{
    int x;
    cout << "Enter x: ";
    cin >> x;
    cout << "Enter range: ";
    int range; cin >> range;
    int sum = 0;
    for(int n = 1; n <= range; ++n ){
        sum += ( ( n * n ) * pow(x, n) );
        cout <<  ( ( n * n) * pow( x, n ) ) << " + ";
    }
    cout << "\nSummation = " << sum << endl;
    return 0;
}
