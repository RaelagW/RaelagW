#include <iostream>

using namespace std;

int main(){
    string pw;
    cout << "Enter password: ";
    getline(cin, pw);

    int i, specialChar = 0, upperCase = 0;

    for(i = 0; i < pw.length(); ++i){
        if(!(pw[i] >= 'a' && pw[i] <= 'z' || pw[i] >= 'A' && pw[i] <= 'Z' || pw[i] >= '0' && pw[i] <= '9')) specialChar++;
        if((pw[i]) >= 'A' && pw[i] <= 'Z') upperCase++;
    }

    if(i < 8){
        cout << "invalid password length, it must be at least 8 characters!\n";
    }else{
        if(specialChar == 0){
            cout << "Your password must have at least 1 special character!\n";
        }else if(upperCase == 0){
            cout << "Your password must have at least 1 uppercase character!\n";
        }
    }
    return 0;
}
