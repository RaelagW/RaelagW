#include <iostream>
#include <fstream>
using namespace std;

int main()
{
    string password;
    cout << "Enter password: ";
    getline( cin, password );
    int specialC, upperC, lowerC, numberOfD, i;
    specialC = upperC = lowerC = numberOfD = i = 0;
    while( password[i] != '\0' ) {
        if(!((password[i]>='a' && password[i]<='z') || (password[i]>='A' && password[i]<= 'Z') || (password[i] >= '0' && password[i] <= '9')))
        {
            specialC++;
        }
        if(password[i]>='A' && password[i]<='Z')
        {
            upperC++;
        }
        if(password[i]>= 'a' && password[i]<= 'z')
        {
            lowerC++;
        }
        if(password[i]>='0' && password[i]<='9')
        {
            numberOfD++;
        }
        i++;
    }

    if(i<8)
    {
        cout << "Password length must be at least character" << endl;
    }
    else if(specialC==0)
    {
        cout << "Your password should have mixture of lower & upper case character & digit & special character!" << endl;
    }
    else if(upperC==0)
    {
        cout << "Your password should have mixture of lower & upper case character & digit & special character!" << endl;
    }
    else if(lowerC==0)
    {
        cout << "Your password should have mixture of lower & upper case character & digit & special character!" << endl;
    }
    else if(numberOfD==0)
    {
        cout << "Your password should have mixture of lower & upper case character & digit & special character!" << endl;
    }
    else
    {
        cout << "Your password : " << password << endl;
    }
    return 0;
}
